#:kivy 1.11.1

<CalcButton@Button>:
	font_size: 26

<CalcDisplay>:
	resultsDsp: resultsDsp
	orientation: 'vertical'

	ResultsDisplay:
		id: resultsDsp
		size_hint_y: .2
	ButtonsDisplay:
		CalcButton:
			id: seven
			text: '7'

			on_release: root.addChar(7)
		CalcButton:
			id: eight
			text: '8'

			on_release: root.addChar(8)
		CalcButton:
			id: nine
			text: '9'

			on_release: root.addChar(9)
		CalcButton:
			id: add
			text: '+'

			on_release: root.addChar('+')
		CalcButton:
			id: four
			text: '4'

			on_release: root.addChar(4)
		CalcButton:
			id: five
			text: '5'

			on_release: root.addChar(5)
		CalcButton:
			id: six
			text: '6'

			on_release: root.addChar(6)
		CalcButton:
			id: subtract
			text: '-'

			on_release: root.addChar('-')
		CalcButton:
			id: one
			text: '1'

			on_release: root.addChar(1)
		CalcButton:
			id: two
			text: '2'

			on_release: root.addChar(2)
		CalcButton:
			id: three
			text: '3'

			on_release: root.addChar(3)
		CalcButton:
			id: multiply
			text: '×'

			on_release: root.addChar('×')
		CalcButton:
			id: delete
			text: 'DEL'

			on_release: root.deleteRightmostChar()
		CalcButton:
			id: decimal
			text: '.'

			on_release: root.addChar('.')
		CalcButton:
			id: equals
			text: '='

			on_release: root.displayAnswer()
		CalcButton:
			id: divide
			text: '÷'

			on_release: root.addChar('÷')

<ResultsDisplay>:
	font_size: self.height*0.8
	readonly: True

<ButtonsDisplay>:
	rows: 5
	cols: 4

	canvas:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
